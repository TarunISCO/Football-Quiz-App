                    android:id="@+id/queTwo_optionC"
                    style="@style/radio_button_style"
                    android:text="@string/queTwo_C"/>
                <RadioButton
                    android:id="@+id/queTwo_optionD"
                    style="@style/radio_button_style"
                    android:text="@string/queTwo_D"/>

            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/separator"/>

        <LinearLayout
            android:id="@+id/question_three_container"
            style="@style/question_container_style">

            <TextView
                android:id="@+id/question_three_textView"
                style="@style/questionStyle"
                android:text="@string/ques_three"/>

            <RadioGroup
                android:id="@+id/queThreeRadioGroup"
                style="@style/radio_group_style">

                <RadioButton
                    android:id="@+id/queThree_optionA"
                    style="@style/radio_button_style"
                    android:text="@string/queThree_A"/>
                <RadioButton
                    android:id="@+id/queThree_optionB"
                    style="@style/radio_button_style"
                    android:text="@string/queThree_B"/>
                <RadioButton
                    android:id="@+id/queThree_optionC"
                    style="@style/radio_button_style"
                    android:text="@string/queThree_C"/>
                <RadioButton
                    android:id="@+id/queThree_optionD"
                    style="@style/radio_button_style"
                    android:text="@string/queThree_D"/>

            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/separator"/>

        <LinearLayout
            android:id="@+id/question_four_container"
            style="@style/question_container_style">

            <TextView
                android:id="@+id/question_four_textView"
                style="@style/questionStyle"
                android:text="@string/ques_four"/>

            <RadioGroup
                android:id="@+id/queFourRadioGroup"
                style="@style/radio_group_style">

                <RadioButton
                    android:id="@+id/queFour_optionA"
