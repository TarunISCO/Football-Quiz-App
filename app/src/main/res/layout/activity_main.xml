        <LinearLayout
            android:id="@+id/question_seven_container"
            style="@style/question_container_style">

            <TextView
                android:id="@+id/question_seven_textView"
                style="@style/questionStyle"
                android:text="@string/ques_seven"/>

            <EditText
                android:id="@+id/queSevenAnswer"
                android:hint="Your Answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <View
            style="@style/separator"/>

        <LinearLayout
            android:id="@+id/question_eight_container"
