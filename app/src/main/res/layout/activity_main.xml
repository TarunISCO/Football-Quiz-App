<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tarun.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/question_one_container"
            style="@style/question_container_style">

            <TextView
                android:id="@+id/question_one_textView"
                style="@style/questionStyle"
                android:text="@string/ques_one"/>

            <RadioGroup
                android:id="@+id/queOneRadioGroup"
                style="@style/radio_group_style">

                <RadioButton
                    android:id="@+id/queOne_optionA"
                    style="@style/radio_button_style"
                    android:text="@string/queOne_A"/>
                <RadioButton
                    android:id="@+id/queOne_optionB"
                    style="@style/radio_button_style"
                    android:text="@string/queOne_B"/>
                <RadioButton
                    android:id="@+id/queOne_optionC"
                    style="@style/radio_button_style"
                    android:text="@string/queOne_C"/>
                <RadioButton
                    android:id="@+id/queOne_optionD"
                    style="@style/radio_button_style"
                    android:text="@string/queOne_D"/>

            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/separator"/>


        <LinearLayout
            android:id="@+id/question_two_container"
            style="@style/question_container_style">

            <TextView
                android:id="@+id/question_two_textView"
                style="@style/questionStyle"
                android:text="@string/ques_two"/>

            <RadioGroup
                android:id="@+id/queTwoRadioGroup"
                style="@style/radio_group_style">

