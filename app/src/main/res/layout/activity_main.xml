                android:text="@string/ques_eight"/>

            <LinearLayout
                style="@style/radio_group_style">

                <CheckBox
                    android:id="@+id/quesEight_optionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quesEight_A"/>

                <CheckBox
                    android:id="@+id/quesEight_optionB"
